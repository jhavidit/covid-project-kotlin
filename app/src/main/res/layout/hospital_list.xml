<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.cardview.widget.CardView
        android:id="@+id/hospital_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_12"
        app:cardBackgroundColor="@color/grey_white_box"
        app:cardCornerRadius="@dimen/dimen_4"
        app:cardElevation="@dimen/dimen_0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/dimen_16"
            android:paddingBottom="@dimen/dimen_16"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_16"
            android:paddingRight="@dimen/dimen_16"
            android:weightSum="5">

            <TextView
                android:id="@+id/hospital_name_address"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="4.3"
                android:fontFamily="@font/sen_bold"
                android:paddingEnd="@dimen/dimen_4"
                android:paddingRight="@dimen/dimen_4"
                android:text="@string/xyz_hospital_sector_32_gurgaon"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/dimen_text_15"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                app:srcCompat="@drawable/ic_proceed"
                android:contentDescription="@string/next_button" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</layout>